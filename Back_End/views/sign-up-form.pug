extends layout

block content

  h1 Sign Up
  
  form(method="POST")
    div.form-group
      label(for="username") Username:
      input#username.form-control(
        name="username",
        type="text",
        placeholder="username",
        required value=(undefined===user ? '' : user.username)
      )
      label(for="password") Password:
      input#username.form-control(
        name="password",
        type="password",
      )
    button.btn.btn-primary(type='submit') Sign Up

  if errors
    ul
      for error in errors
        li!= error.msg