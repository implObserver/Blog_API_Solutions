generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESDB_NEON_BLOG_URI")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String?
  password String?
  isAdmin  Boolean   @default(false)
  token    String?
  profile  Profile?
  posts    Post[]
  Comment  Comment[]
}

model Post {
  userId      Int      @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  isPublished Boolean  @default(false)
  postingDate DateTime @default(now())
  tag         String
  elements    Json[]

  comments Comment[]
}

model Comment {
  userId      Int      @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  postId      Int      @unique
  post        Post     @relation(fields: [postId], references: [userId], onDelete: Cascade)
  postingDate DateTime @default(now())
  text        String?
}

model Profile {
  userId Int     @unique
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  avatar String?
  name   String?
  gender String?
  age    String?
}
