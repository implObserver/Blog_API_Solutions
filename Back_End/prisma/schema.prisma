generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESDB_BLOG_URI2")
}

model users {
  id       Int     @id @default(autoincrement())
  name     String?
  password String?
  isAdmin  Boolean @default(false)
  token    String?
}

model posts {
  id          Int      @id @default(autoincrement())
  authorId    Int
  postingDate DateTime @default(now())
  isPublished Boolean  @default(false)
  tag         String
  elements    Json[]
}

model comments {
  id          Int      @id @default(autoincrement())
  authorId    Int
  postId      Int
  text        String?
  postingDate DateTime @default(now())
}
