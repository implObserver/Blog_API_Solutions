generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESDB_BLOG_URI2")
}

model users {
  id       Int        @id @default(autoincrement())
  name     String?
  password String?
  isAdmin  Boolean    @default(false)
  Posts    posts[]
  Comments comments[]
}

model posts {
  id          Int        @id @default(autoincrement())
  author      users      @relation(fields: [authorId], references: [id])
  authorId    Int
  postingDate DateTime   @default(now())
  isPublished Boolean    @default(false)
  tag         String
  elements    Json[]
  Comments    comments[]
}

model comments {
  id          Int      @id @default(autoincrement())
  author      users    @relation(fields: [authorId], references: [id])
  authorId    Int
  post        posts    @relation(fields: [postId], references: [id])
  postId      Int
  text        String?
  postingDate DateTime @default(now())
}
