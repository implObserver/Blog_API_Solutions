extends layout

block content

  h1 Log In

  form(action="/log-in",method="POST")
    div.form-group
      label(for="username") Username:
      input#username.form-control(
        name="username",
        type="text",
        placeholder="username"
      )
      label(for="password") Password:
      input#username.form-control(
        name="password",
        type="password",
      )
    button.btn.btn-primary(type='submit') Log In

  if errors
    ul
      for error in errors
        li!= error.msg