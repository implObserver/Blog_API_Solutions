{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom",
      "es2016"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"] // Путь для алиаса при разрешении в TypeScript
    },
  },
  "include": [
    "src/**/*"
  ]
}